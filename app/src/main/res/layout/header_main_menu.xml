<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_main_height"
    android:background="@color/colorHeaderMain"
    >

    <ImageView
        android:id="@+id/imgV_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_start_header_main_txtV"
        android:layout_marginTop="@dimen/margin_top_header_main_txtV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@android:drawable/star_big_on"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtV_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_user_name_header_main"
        android:textSize="@dimen/dimen_user_name_header_main"
        android:textColor="@color/colorTextHeaderMain"
        android:layout_margin="@dimen/margin_start_header_main_txtV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgV_user"/>

    <TextView
        android:id="@+id/txtV_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_header_main_settings"
        android:textColor="@color/colorTextHeaderMain"
        android:textSize="@dimen/dimen_setting_header_main"
        android:layout_marginStart="@dimen/margin_start_header_main_txtV"

        app:layout_constraintTop_toBottomOf="@id/txtV_name_user"
        app:layout_constraintStart_toEndOf="@id/imgV_user"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>